{
  "name": "@clawboo/config",
  "version": "0.0.0",
  "description": "Settings loader and persistence for Clawboo (XDG dirs, env vars, OpenClaw fallback)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clawboo/clawboo.git",
    "directory": "packages/config"
  },
  "homepage": "https://github.com/clawboo/clawboo/tree/main/packages/config",
  "bugs": "https://github.com/clawboo/clawboo/issues",
  "keywords": [
    "clawboo",
    "config",
    "settings",
    "openclaw"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@clawboo/tsconfig": "workspace:*",
    "@types/node": "^22.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.7.0"
  }
}

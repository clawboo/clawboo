{
  "name": "@clawboo/logger",
  "version": "0.0.0",
  "description": "Pino-based structured logger for Clawboo packages",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clawboo/clawboo.git",
    "directory": "packages/logger"
  },
  "homepage": "https://github.com/clawboo/clawboo/tree/main/packages/logger",
  "bugs": "https://github.com/clawboo/clawboo/issues",
